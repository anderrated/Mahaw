@page "/"
@using MahawMedicineApp.Shared
@inject NavigationManager Navigation

<PageTitle>MAHAW - Stay Informed. Stay Healthy.</PageTitle>

<div class="hero-section">
    <div class="heading-container">
        <div class="search-container">
            <input type="text" placeholder="Search for medicines..." class="search-input" />
            <button>Search</button>
        </div>

        <div class="user-log">
            <button @onclick="GoToRegister">Register</button>
            <button @onclick="GoToLogin">Sign In</button> <!-- Fixed event binding -->
        </div>
    </div>
    <div class="mahaw-line">
        <div class="mahaw-text">
            <h1>STAY INFORMED.</h1>
            <h1>STAY HEALTHY.</h1>
            <p>Find accurate information on thousands of medicines, including usage, side effects, and precautions.</p>
        </div>

        <div class="drug-search">
            <h3>A-Z Drug Search</h3>
            <AZSearch />
        </div>
    </div> 
    </div>
    <InteractiveSlider />
    <section class="medicines">
        <img src="images/medicines.png" alt="medicines">
    </section>
    <h2>Featured Articles</h2>
    <section class="articles">
        <div class="item">
            <img src="images/doctors.png" alt="doctors">
            <a href="https://nida.nih.gov/publications/research-reports/misuse-prescription-drugs/overview">Click this link.</a>
        </div>
        <div class="item">
            <img src="images/orange.png" alt="orange">
            <a href="https://www.everydayhealth.com/infectious-diseases/deaths-reported-in-listeria-outbreak-tied-to-supplement-shakes/">Click this link.</a>
        </div>
        <div class="item">
            <img src="images/library.png" alt="library">
            <a href="https://pmc.ncbi.nlm.nih.gov/articles/PMC7065295/">Click this link.</a>
        </div>
    </section>

@code {
    private void GoToLogin()
    {
        Navigation.NavigateTo("/login"); // Redirect to login page
    }

    private void GoToRegister()
    {
        Navigation.NavigateTo("/register"); // Redirect to login page
    }
}

<style>
    .hero-section {
        padding: 0;
    }
</style>